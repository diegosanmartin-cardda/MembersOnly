<h1>New User</h1>

<%= form_with model: @user, url: users_path, local: true do |form| %>
    <div>
        <%= form.label :username, value: "Username" %>
        <%= form.text_field :username %>
    </div>
    <div>
        <%= form.label :email, value: "Email" %>
        <%= form.text_field :email, placeholder: "Enter your email" %>
    </div>
    <div>
        <%= form.label :member %>
        <%= form.select :member, User.members.keys.map { |m| [m.titleize, m] } %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>
    <div>
        <%= form.label :password_confirmation, value: "Confirm Password" %>
        <%= form.password_field :password_confirmation %>
    </div>
    <div>
        <%= form.submit "Create User" %>
    </div>
<% end %>