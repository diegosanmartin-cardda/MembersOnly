<%= form_with model: @user, url: user_path, local: true do |form| %>
    <div>
        <%= form.label :username, value: "Username" %>
        <%= form.text_field :username %>
    </div>
    <div>
        <%= form.label :email, value: "Email" %>
        <%= form.text_field :email, placeholder: "Enter your email" %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>
    <div>
        <%= form.submit "Update User" %>
    </div>
<% end %>